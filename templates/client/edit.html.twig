{% extends 'base.html.twig' %}
{% block title %}Modification client{% endblock %}
{% block body %}
    <div class="main">
        {{ include('include/_navigation.html.twig') }}
        <div class="content">
            <div class="container">
                <div class="titlereturn">
                <h4>Modifier le Client</h4>
                <a href="{{ path('client') }}" class="buttonreturn"><i class="fas fa-undo"></i> Retour</a>
                </div>
                {{ form_start(form) }}
                <div class="profil">
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.name) }}
                    </div>
                    <div class="mail">
                        <p>Email</p>
                        {{ form_row(form.email) }}
                    </div>
                    <div class="mail">
                        <p>Numéro de téléphone</p>
                        {{ form_row(form.telephone) }}
                    </div>
                    <button type="submit" class="buttongreen">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
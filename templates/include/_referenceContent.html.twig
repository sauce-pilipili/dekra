<table class="table">
    <tr class="tr-table-title">
        <th class="table-title">références</th>
        <th class="table-title">Client</th>
        <th class="table-title">Date de dépôt</th>
        <th class="table-title">ID Dekra</th>
        <th class="table-title">ID Kizeo</th>
        <th class="table-title">Cloture</th>
        <th class="table-title">validation</th>
        <th class="table-title">Supprimer</th>
    </tr>
    {% for ref in references %}
        <tr>
            <td class="table-name left20px"><a href="{{ path('reference_edit',{id:ref.id}) }}">{{ ref.reference }} </a>
            </td>
            <td class="table-name">{{ ref.client.name }}</td>
            <td class="table-name">{{ ref.depotDate |date('d-m-y') }}</td>
            <td class="table-name">{{ ref.idLotUnique }}</td>
            <td class="table-name">{{ ref.idKizeoForm }}</td>

            <td class="table-name">{% if ref.complet %}<span>&#9745;</span>{% else %}<span>&#9744;</span>{% endif %}
            </td>
            <td class="table-name">{% if ref.validation %}<span>&#9745;</span>{% else %}<span>&#9744;</span>{% endif %}
            </td>
            <td class="table-name action">
                <form method="post" action="{{ path('references_delete', {'id': ref.id}) }}"
                      onsubmit="return confirm('êtes vous sûr de vouloir supprimer ce département il sera effacé de la mobilité des controleurs affecté a celui-ci');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ref.id) }}">
                    <button class="btn">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" height="24" width="24">
                            <path xmlns="http://www.w3.org/2000/svg"
                                  d="M7 4C7 2.89543 7.89543 2 9 2H15C16.1046 2 17 2.89543 17 4V6H18.9897C18.9959 5.99994 19.0021 5.99994 19.0083 6H21C21.5523 6 22 6.44772 22 7C22 7.55228 21.5523 8 21 8H19.9311L19.0638 20.1425C18.989 21.1891 18.1182 22 17.0689 22H6.93112C5.88184 22 5.01096 21.1891 4.9362 20.1425L4.06888 8H3C2.44772 8 2 7.55228 2 7C2 6.44772 2.44772 6 3 6H4.99174C4.99795 5.99994 5.00414 5.99994 5.01032 6H7V4ZM9 6H15V4H9V6ZM6.07398 8L6.93112 20H17.0689L17.926 8H6.07398ZM10 10C10.5523 10 11 10.4477 11 11V17C11 17.5523 10.5523 18 10 18C9.44772 18 9 17.5523 9 17V11C9 10.4477 9.44772 10 10 10ZM14 10C14.5523 10 15 10.4477 15 11V17C15 17.5523 14.5523 18 14 18C13.4477 18 13 17.5523 13 17V11C13 10.4477 13.4477 10 14 10Z"
                                  fill="#0D0D0D"/>
                        </svg>
                    </button>
                </form>
            </td>
        </tr>
    {% endfor %}
</table>
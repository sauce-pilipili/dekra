{% extends 'base.html.twig' %}
{% block title %}Modifier un membre{% endblock %}
{% block body %}
    <div class="main">
        {{ include('include/_navigation.html.twig') }}
        <div class="content">
            <div class="container">
                <div class="titlereturn">
                    <h4>Modifier un membre</h4>
                    <a href="{{ path('members_members') }}" class="buttonreturn"><i class="fas fa-undo"></i> Retour</a>
                </div>
                {{ form_start(form) }}
                <div class="profil">
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.name) }}
                    </div>
                    <div class="mdp">
                        <p>Région</p>

                       {{ form_row(form.region) }}
                    </div>
                    <div class="mail">
                        <p>Email</p>
                        {{ form_row(form.email) }}
                    </div>
                    <div class="mdp-confirm">
                        <p>niveau d'accès</p>

                    {{ form_widget (form.roles) }}
                    </div>
                    <button type="submit" class="buttongreen">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

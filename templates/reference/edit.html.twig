            <div class="container">
                <div class="titlereturn">
                    <h4>Modifier la références {{ reference.reference }}</h4>
                    <a href="{{ path('reference_index') }}" class="buttonreturn"><i class="fas fa-undo"></i> Retour</a>
                </div>
                {{ form_start(form) }}

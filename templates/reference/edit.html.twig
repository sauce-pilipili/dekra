                        {{ form_row(form.complet) }}
                        <p>Lot validé par l'administrateur</p>
                        {{ form_row(form.validation) }}
                    </div>
                    <div class="name">
                        <p>date de restitution</p>
                        {{ form_row(form.dateRestitution) }}

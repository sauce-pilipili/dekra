{% extends 'base.html.twig' %}
{% block title %}Nouvel utilisateur{% endblock %}
{% block body %}
    <div class="main">
        {{ include('include/_navigation.html.twig') }}
        <div class="content">
            <div class="container">
                <div class="titlereturn">
                    <h4>Ajout d'un membre</h4>
                    <a href="{{ path('members_members') }}" class="buttonreturn"><i class="fas fa-undo"></i> Retour</a>
                </div>
                {{ form_start(form) }}
                <div class="profil">
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.name) }}
                    </div>
                    <div class="region">
                        <p>Région</p>
                        {{ form_row(form.region) }}
                    </div>
                    <div class="mail">
                        <p>Adresse mail</p>
                        {{ form_row(form.email) }}
                    </div>
                    <div class="mdp">
                        <p>Mot de passe</p>
                        {{ form_row(form.password.first) }}
                    </div>
                    <div class="level">
                        <p>Niveau</p>
                        {{ form_row(form.roles) }}
                    </div>
                    <div class="mdp-confirm">
                        <p>Vérification du mot de passe</p>
                        {{ form_row(form.password.second) }}
                    </div>
                    <div></div>
                    <button class="buttongreen">Ajouter</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
